<h1>メモアプリ</h1>
<p class='show_title'><%= @finded_memo['title'] %></P>
<p class='show_content'><%= @finded_memo['content'].gsub(/\n/, '<br>') %></p>

<div class='button_edit_delete'>
  <a href='/edit_memos/<%= @finded_memo['id'] %>' class='edit_button'><button>変更</button></a>
  <form method='post' action='/memos/<%= @finded_memo['id'] %>'>
    <input type='hidden' name='_method' value='delete'>
    <button type='submit'>削除</button>
  </form>
</div>
